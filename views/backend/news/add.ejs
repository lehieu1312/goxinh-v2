<% include ../layout/header.ejs %>
<link href="/themes/backend/css/plugins/select/select2.min.css" rel="stylesheet">
<script src="/themes/backend/js/ckeditor/ckeditor.js"></script>
<!-- <script src="https://cdn.ckeditor.com/4.8.0/standard-all/ckeditor.js"></script> -->
<% include ../layout/menu-left.ejs %>
<% include ../layout/top.ejs %>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <%if(!newsData.id){%>
                    <h5>Thêm bài viết</h5>
                    <%}else{%>
                    <h5>Sửa bài viết</h5>
                    <%}%>
                    <div class="ibox-tools">
                        <a href="/admin/news" class="btn btn-success btn-plus" type="button"><i class="fa fa-arrow-circle-left"></i>&nbsp;&nbsp;<span
                                class="bold">Back</span></a>
                    </div>
                </div>
                <div class="ibox-content">
                    <% if(success_msg != ''){ %>
                    <div class="alert alert-success">
                        <%= success_msg%>
                    </div>
                    <% } %>
                    <% if(error_msg != ''){%>
                    <div class="alert alert-danger error_msg">
                        <%= error_msg%>
                    </div>
                    <%}%>
                    <% if(errors && errors!='') { %>
                    <div class="alert alert-danger errors">
                        <% errors.forEach(function(e){ %>
                        <%= e.msg %> <br />
                        <%});%>
                    </div>
                    <% };%>
                    <%if(!newsData.id){%>
                    <form method="post" class="form-horizontal" enctype="multipart/form-data">
                        <%}else{%>
                        <form method="post" action="/admin/news/edit/<%=newsData.id%>" class="form-horizontal" enctype="multipart/form-data">
                            <%}%>
                            <div class="row">
                                <div class="col-xs-12 col-md-12 col-lg-12">
                                    <div class="form-group"><label class="col-sm-2 control-label">Tên</label>
                                        <div class="col-sm-4"><input type="text" required name="title" class="form-control"
                                                required value="<%=newsData.title%>"></div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-md-12 col-lg-12">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Ảnh</label>
                                        <span class="desc"></span><br>
                                        <%if(newsData.image){%>
                                        <img src="/upload/news/<%= newsData.image%>" width="200px">
                                        <%}%>
                                        <div class="col-sm-4"><input type="file" name="image" class="form-control"
                                                accept="image/*"></div>
                                        <!-- <a href="" class="col-sm-2 control-label text-left">View libary</a> -->
                                    </div>
                                </div>
                                <div class="col-xs-12 col-md-12 col-lg-12">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Mô tả </label>
                                        <div class="col-sm-8">
                                            <textarea id="description" class="form-control" name="description"><%=newsData.description%></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-md-12 col-lg-12">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Nội dung </label>
                                        <div class="col-sm-8">
                                            <textarea id="content" class="form-control" name="content"><%=newsData.content%> </textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-md-12 col-lg-12">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Loại tin tức</label>
                                        <div class="col-sm-4">
                                            <select class="form-control" id="type" name="type">
                                                <% if(newsData.id){%>
                                                <option value="0" <%=(newsData.type==0) ? 'selected=\"selected\"' : ''
                                                    %> >Tin tức</option>
                                                <option value="3" <%=(newsData.type==3) ? 'selected=\"selected\"' : ''
                                                    %> >Tuyển dụng</option>
                                                <option value="1" <%=(newsData.type==1) ? 'selected=\"selected\"' : ''
                                                    %> >Thông tin công ty</option>
                                                <option value="2" <%=(newsData.type==2) ? 'selected=\"selected\"' : ''
                                                    %> >Hình ảnh hoạt động</option>
                                                <%}else{%>
                                                <option value="0" selected>Tin tức</option>
                                                <option value="3">Tuyển dụng</option>
                                                <option value="1">Thông tin công ty</option>
                                                <option value="2">Hình ảnh hoạt động</option>
                                                <%}%>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Trạng thái</label>
                                    <div class="col-sm-4">
                                        <div><label> <input type="radio" <% if(newsData.status){ %> checked="checked"
                                                <% } %> value="true" name="status">Hoạt động </label></div>
                                        <div><label> <input type="radio" value="false" name="status" <%
                                                    if(!newsData.status){ %> checked="checked"
                                                <% } %>>Không hoạt động</label></div>
                                    </div>
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="form-group">
                                        <div class="col-sm-4 col-sm-offset-10">
                                            <a href="/admin/news" class="btn btn-default "><i class="fa fa-times"></i>&nbsp;&nbsp;Hủy</a>
                                            <button class="btn btn-primary" type="submit" id="btn-submit"><i class="fa fa-save"></i>&nbsp;&nbsp;Lưu</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../layout/footer.ejs %>
<script>
    CKEDITOR.replace('description', {
        fullPage: true,
        extraPlugins: 'imagebrowser',
        imageBrowser_listUrl: "/admin/ckeditor/files",
        // Disable content filtering because if you use full page mode, you probably
        // want to  freely enter any HTML content in source mode without any limitations.
        allowedContent: true,
        height: 320
    });
    CKEDITOR.replace('content', {
        fullPage: true,
        extraPlugins: 'imagebrowser',
        imageBrowser_listUrl: "/admin/ckeditor/files",
        allowedContent: true,
        height: 320
    });
</script>