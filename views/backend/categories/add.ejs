<% include ../layout/header.ejs %>
<link href="/themes/backend/css/plugins/select/select2.min.css" rel="stylesheet">
<% include ../layout/menu-left.ejs %>
<% include ../layout/top.ejs %>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <%if(!categoriesData.code){%>
                    <h5>Thêm Danh Mục</h5>
                    <%}else{%>
                    <h5>Sửa Danh Mục</h5>
                    <%}%>
                    <div class="ibox-tools">
                        <a href="/admin/categories" class="btn btn-success btn-plus" type="button"><i class="fa fa-arrow-circle-left"></i>&nbsp;&nbsp;<span
                                class="bold">Back</span></a>
                    </div>
                </div>
                <div class="ibox-content">
                    <% if(success_msg != ''){ %>
                    <div class="alert alert-success">
                        <%= success_msg%>
                    </div>
                    <% } %>
                    <% if(error_msg != ''){%>
                    <div class="alert alert-danger error_msg">
                        <%= error_msg%>
                    </div>
                    <%}%>
                    <% if(errors && errors!='') { %>
                    <div class="alert alert-danger errors">
                        <% errors.forEach(function(e){ %>
                        <%= e.msg %> <br />
                        <%});%>
                    </div>
                    <% };%>
                    <%if(!categoriesData.id){%>
                    <form method="post" class="form-horizontal">
                        <%}else{%>
                        <form method="post" action="/admin/categories/edit/<%=categoriesData._id%>" class="form-horizontal">
                            <%}%>
                            <div class="row">
                                <div class="col-xs-12 col-md-12 col-lg-12">
                                    <div class="form-group"><label class="col-sm-2 control-label">Mã</label>
                                        <div class="col-sm-4"><input type="text" name="code" class="form-control"
                                                required value="<%=categoriesData.code%>"></div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-md-12 col-lg-12">
                                    <div class="form-group"><label class="col-sm-2 control-label">Tên</label>
                                        <div class="col-sm-4"><input type="text" name="name" class="form-control"
                                                required value="<%=categoriesData.nameCategory%>"></div>
                                    </div>
                                </div>
                                <div class="col-xs-12  col-md-12 col-lg-12">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Thuộc danh mục</label>
                                        <div class="col-sm-4">
                                            <select class="form-control" required id="categoryParent" name="categoryParent">
                                                <option value="0" selected>--- Không ---</option>
                                                <% categories.forEach(function(item){ %>
                                                <%if(categoriesData.categoryParent){%>
                                                <option value="<%= item._id%>" <%=item._id.toString()===categoriesData.categoryParent.toString()
                                                    ? 'selected' : '' %>>
                                                    <%= item.nameCategory%>
                                                </option>
                                                <%}else{%>
                                                <option value="<%= item._id%>">
                                                    <%= item.nameCategory%>
                                                </option>
                                                <%}})%>

                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Trạng thái</label>
                                    <div class="col-sm-4">
                                        <div><label> <input type="radio" <% if(categoriesData.status){ %>
                                                checked="checked"
                                                <% } %> value="true" name="status">Hoạt động </label></div>
                                        <div><label> <input type="radio" value="false" name="status" <%
                                                    if(!categoriesData.status){ %> checked="checked"
                                                <% } %>>Không hoạt động</label></div>
                                    </div>
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="form-group">
                                        <div class="col-sm-4 col-sm-offset-10">
                                            <a href="/admin/categories" class="btn btn-default "><i class="fa fa-times"></i>&nbsp;&nbsp;Hủy</a>
                                            <button class="btn btn-primary" type="submit" id="btn-submit"><i class="fa fa-save"></i>&nbsp;&nbsp;Lưu</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../layout/footer.ejs %>
<script src="/themes/backend/js/plugins/select2/select2.full.min.js"></script>
<script>
    $(document).ready(function () {
        $(".select2_demo_1").select2();
        $(".select2_demo_2").select2();
        $(".select2_demo_3").select2({
            placeholder: "Select a state",
            allowClear: true
        });
    });
</script>