<% include ../layout/header.ejs %>
<% include ../layout/menu-left.ejs %>
<% include ../layout/top.ejs %>
<!-- Content administrator -->
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5> Danh Sách Đơn hàng</h5>
                    <div class="ibox-tools">
                        <a href="/admin/carts/add" class="btn btn-success btn-plus" type="button"><i class="fa fa-plus"></i>&nbsp;&nbsp;<span
                                class="bold">Thêm</span></a>
                        <a href="javascript:void(0)" id="deleteManyCategories" class="btn btn-danger btn-plus" type="button"><i
                                class="fa fa-remove"></i>&nbsp;&nbsp;<span class="bold">Xóa</span></a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <% if(success_msg != ''){ %>
                        <div class="alert alert-success">
                            <%= success_msg%>
                        </div>
                        <% } %>
                        <% if(error_msg != ''){ %>
                        <div class="alert alert-danger">
                            <%= error_msg%>
                        </div>
                        <% } %>
                        <input type="hidden" name="id[]" value="">
                        <table id="carts-table" class="table table-striped table-bordered table-hover dataTables-category">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th><input type="checkbox" id="checkboxall" class="checkboxAdminProduct"></th>
                                    <th>Tên Khách hàng</th>
                                    <th>Số điện thoại</th>
                                    <th>Email</th>
                                    <th>Tổng tiền</th>
                                    <th>Ngày</th>
                                    <th>Trạng thái</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% var dem=1;%>
                                <% data.forEach(function(item){ %>
                                <tr>
                                    <td>
                                        <%=dem%>
                                    </td>
                                    <td><input type="checkbox" id="<%=item._id%>" class="i-checks checkboxAdminProduct"
                                            name="name[]" value="<%=item._id%>"></td>
                                    <td>
                                        <a href="/admin/carts/edit/<%=item._id%>" title="Sửa"><%=item.name%></a>
                                    </td>
                                    <td>
                                        <%=item.phoneNumber%>
                                    </td>
                                    <td>
                                        <%=item.email%>
                                    </td>
                                    <td>
                                        <%=item.summaryMoney%>
                                    </td>
                                    <td>
                                        <%=moment(item.dateCreate).format('DD-MM-YYYY, HH:mm:ss');%>
                                    </td>

                                    <td>
                                        <%if(item.statusOrder==0){%>
                                            <span>Mới</span>
                                        <%}else if(item.statusOrder==1){%>
                                            <span>Đang giao hàng</span>
                                        <%}else if(item.statusOrder==2){%>
                                            <span>Hoàn tất</span>
                                        <%}else{%>
                                            <span>Loại bỏ</span>
                                        <%}%>
                                    </td>
                                    <td class="text-center">
                                        <a href="/admin/carts/edit/<%=item._id%>" title="Sửa"> <i class="fa fa-edit color-navi fa-lg"></i></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        <a href="javascript:void(0)" onclick="delProduct('<%=item._id%>')" title="Xóa ">
                                            <i class="fa fa-trash color-red fa-lg "></i></a>
                                    </td>
                                </tr>
                                <% dem++;})%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Content administrator -->
<% include ../layout/footer.ejs %>
<script src="/themes/backend/js/plugins/dataTables/datatables.min.js "></script>
<script>
    function delProduct(id) {
        var arrId = [id];
        var rep = confirm("Bạn có chắc chắn muốn xóa danh mục này?");
        if (rep == true) {
            $.ajax({
                url: '/admin/categories/del',
                type: 'POST',
                contentType: 'application/json',
                dataType: "json",
                data: JSON.stringify(arrId),
                success: function (response) {
                    if (response.status == 1) {
                        alert('Đã xóa thành công.');
                        location.reload();
                    } else {
                        alert(response.msg);
                    }
                }
            });
        }
    }
</script>
<script>
    $(document).ready(function () {
        $('.dataTables-category').DataTable({
            pageLength: 25,
            responsive: true,
            dom: '<"html5buttons "B>lTfgitp',
            buttons: [{
                extend: 'copy',
                className: 'btn btn-info'
            }, {
                extend: 'csv'
            }, {
                extend: 'excel',
                title: 'ExampleFile'
            }, {
                extend: 'pdf',
                title: 'ExampleFile'
            }, {
                extend: 'print',
                customize: function (win) {
                    $(win.document.body).addClass('white-bg');
                    $(win.document.body).css('font-size', '10px');
                    $(win.document.body).find('table').addClass('compact').css('font-size',
                        'inherit');
                }
            }]
        });
        ///////////////////Check box//////////////
        $("#checkboxall").change(() => {
            var checkboxes = document.getElementsByName('name[]');
            var checkboxall = document.getElementById('checkboxall');
            var chkBox = checkboxall.checked;
            // alert(chkBox);
            for (var i = 0; i < checkboxes.length; i++) {
                checkboxes[i].checked = chkBox;
            }
        });
        /////////////////////////////////DELETE Many Categories//////////////////////////////////
        $("#deleteManyCategories").click(function () {
            var users_arr = [];
            $("#categories-table input[type=checkbox]").each(function () {
                if ($(this).is(":checked")) {
                    var id = $(this).attr("id");
                    users_arr.push(id);
                }
            });
            if (users_arr.length > 0) {
                var rep = confirm("Bạn có chắc chắn muốn xóa các Danh Mục đã chọn?");
                if (rep == true) {
                    $.ajax({
                        url: "/admin/categories/del",
                        type: "POST",
                        contentType: "application/json",
                        dataType: "json",
                        data: JSON.stringify(users_arr),
                        success: function (response) {
                            if (response.status == true) {
                                alert(
                                    "Đã xóa thành công. Nhưng danh mục đã có sản phẩm sẽ không được xóa."
                                );
                                location.reload();
                            } else {
                                alert("Lỗi: " + response.msg);
                            }
                        }
                    });
                }
            } else {
                alert("Không có Danh mục nào được chọn để xóa");
            }
        });
    });
</script>