<% include ../layout/header.ejs %>
<% include ../layout/menu-left.ejs %>
<% include ../layout/top.ejs %>
<!-- Content administrator -->
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5> Chi tiết đơn hàng</h5>
                  
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <% if(success_msg != ''){ %>
                        <div class="alert alert-success">
                            <%= success_msg%>
                        </div>
                        <% } %>
                        <% if(error_msg != ''){ %>
                        <div class="alert alert-danger">
                            <%= error_msg%>
                        </div>
                        <% } %>
                        <div class="row" style="padding-left: 50px;">
                            <table class="table-info-cart">
                                <tbody>
                                    <tr>
                                        <td>Họ tên: </td>
                                        <td><strong><%= data.name %></strong></td>
                                    </tr>
                                    <tr>
                                        <td>Số điện thoại: </td>
                                        <td><strong> <%= data.phoneNumber %></strong></td>
                                    </tr>
                                    <tr>
                                        <td>Email: </td>
                                        <td><strong> <%= data.email %></strong></td>
                                    </tr>
                                    <tr>
                                        <td>Ngày đặt hàng: </td>
                                        <td><strong><%=moment(data.dateCreate).format('DD-MM-YYYY HH:mm')%></strong></td>
                                    </tr>
                                    <tr>
                                        <td>Trạng thái</td>
                                        <td>   
                                            <%if(data.statusOrder==0){%>
                                               <label class="btn-info">Mới</label>
                                           <%}else if(data.statusOrder==1){%>
                                               <span class="btn-success">Đang giao hàng</span>
                                           <%}else if(data.statusOrder==2){%>
                                               <span class="btn-default">Hoàn tất</span>
                                           <%}else{%>
                                               <span class="btn-danger">Loại bỏ</span>
                                           <%}%></td>
                                    </tr>
                                    <tr>
                                        <td>Ghi chú: </td>
                                        <td> <strong><%= data.notes %></strong></td>
                                    </tr>
                                </tbody>
                            </table>
                           
                        </div>
                        <table id="carts-table" class="table table-striped table-bordered table-hover dataTables-category">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Mã</th>
                                    <th>Sản phẩm</th>
                                    <th>Màu sắc</th>
                                    <th>Ảnh</th>
                                    <th>Giá</th>
                                    <th>Số lượng</th>
                                    <th>Tổng tiền</th>
                                   
                                </tr>
                            </thead>
                            <tbody>
                                <% var dem=1;%>
                                <% data.cartProduct.forEach(function(item){ %>
                                <tr>
                                    <td>
                                        <%=dem%> 
                                    </td>
                                    <td>
                                         <%=item.code%>
                                    </td>
                                    <td>
                                        <a href="/san-pham/"> <%=item.name%></a>
                                    </td>
                                    <td>
                                        <%if(item.color==='mau-trang'){%>
                                            <span>Màu Trắng</span>
                                        <%}else if(mau-go-tu-nhien){%>
                                            <span>Màu gỗ tự nhiên</span>
                                        <%}else{%>
                                            <span>Màu cánh gián</span>
                                        <%}%>
                                    </td>
                                    <td>
                                        <img src="/upload/product/<%=item.code%>/<%=item.image%>" alt="Image" width="120px"> 
                                    </td>
                                    <td>
                                        <%=item.price%>
                                    </td>
                                    <td>
                                        <%=item.quanlity%>
                                    </td>
                                    <td> 
                                        <%=item.money%>
                                    </td>
                                 
                                </tr>
                                <% dem++;})%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-12">
             
            </div>
        </div>
    </div>
</div>
<!-- End Content administrator -->
<% include ../layout/footer.ejs %>
<script src="/themes/backend/js/plugins/dataTables/datatables.min.js "></script>
