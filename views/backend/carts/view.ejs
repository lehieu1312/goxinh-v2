<% include ../layout/header.ejs %>
<% include ../layout/menu-left.ejs %>
<% include ../layout/top.ejs %>
<!-- Content administrator -->
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5> Chi tiết đơn hàng</h5>
                  
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <% if(success_msg != ''){ %>
                        <div class="alert alert-success">
                            <%= success_msg%>
                        </div>
                        <% } %>
                        <% if(error_msg != ''){ %>
                        <div class="alert alert-danger">
                            <%= error_msg%>
                        </div>
                        <% } %>
                        <table id="carts-table" class="table table-striped table-bordered table-hover dataTables-category">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th><input type="checkbox" id="checkboxall" class="checkboxAdminProduct"></th>
                                    <th>Tên Khách hàng</th>
                                    <th>Số điện thoại</th>
                                    <th>Email</th>
                                    <th>Tổng tiền</th>
                                    <th>Ngày</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% var dem=1;%>
                                <% data.forEach(function(item){ %>
                                <tr>
                                    <td>
                                        <%=dem%>
                                    </td>
                                    <td><input type="checkbox" id="<%=item._id%>" class="i-checks checkboxAdminProduct"
                                            name="name[]" value="<%=item._id%>"></td>
                                    <td>
                                        <a href="/admin/carts/view/<%=item._id%>" title="Sửa"><%=item.name%></a>
                                    </td>
                                    <td>
                                        <%=item.phoneNumber%>
                                    </td>
                                    <td>
                                        <%=item.email%>
                                    </td>
                                    <td>
                                        <%=item.summaryMoney%>
                                    </td>
                                    <td>
                                        <%=moment(item.dateCreate).format('DD-MM-YYYY, HH:mm:ss');%>
                                    </td>

                                    <td>
                                        <%if(item.statusOrder==0){%>
                                            <span>Mới</span>
                                        <%}else if(item.statusOrder==1){%>
                                            <span>Đang giao hàng</span>
                                        <%}else if(item.statusOrder==2){%>
                                            <span>Hoàn tất</span>
                                        <%}else{%>
                                            <span>Loại bỏ</span>
                                        <%}%>
                                    </td>
                                    
                                </tr>
                                <% dem++;})%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Content administrator -->
<% include ../layout/footer.ejs %>
<script src="/themes/backend/js/plugins/dataTables/datatables.min.js "></script>
