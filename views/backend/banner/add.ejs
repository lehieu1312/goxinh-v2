<% include ../layout/header.ejs %>
<link href="/themes/backend/css/plugins/select/select2.min.css" rel="stylesheet">
<script src="/themes/backend/js/ckeditor/ckeditor.js"></script>
<!-- <script src="https://cdn.ckeditor.com/4.8.0/standard-all/ckeditor.js"></script> -->
<% include ../layout/menu-left.ejs %>
<% include ../layout/top.ejs %>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <%if(!data.id){%>
                    <h5>Thêm banner</h5>
                    <%}else{%>
                    <h5>Sửa banner</h5>
                    <%}%>
                    <div class="ibox-tools">
                        <a href="/admin/banner" class="btn btn-success btn-plus" type="button"><i class="fa fa-arrow-circle-left"></i>&nbsp;&nbsp;<span class="bold">Back</span></a>
                    </div>
                </div>
                <div class="ibox-content">
                    <% if(success_msg != ''){ %>
                    <div class="alert alert-success">
                        <%= success_msg%>
                    </div>
                    <% } %>
                    <% if(error_msg != ''){%>
                    <div class="alert alert-danger error_msg">
                        <%= error_msg%>
                    </div>
                    <%}%>
                    <% if(errors && errors!='') { %>
                    <div class="alert alert-danger errors">
                        <% errors.forEach(function(e){ %>
                        <%= e.msg %> <br />
                        <%});%>
                    </div>
                    <% };%>
                    <%if(!data.id){%>
                    <form method="post" class="form-horizontal" enctype="multipart/form-data">
                        <%}else{%>
                        <form method="post" action="/admin/banner/edit/<%=data.id%>" class="form-horizontal" enctype="multipart/form-data">
                            <%}%>
                            <div class="row">
                                <div class="col-xs-12 col-md-12 col-lg-12">
                                    <div class="form-group"><label class="col-sm-2 control-label">Tên</label>
                                        <div class="col-sm-4"><input type="text" required name="name" class="form-control" required value="<%=data.name%>"></div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-md-12 col-lg-12">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Ảnh</label>
                                        <span class="desc"></span><br>
                                        <%if(data.image){%>
                                        <img src="/upload/banner/<%= data.image%>" width="200px">
                                        <%}%>
                                        <div class="col-sm-4"><input type="file" name="image" class="form-control" accept="image/*"></div>
                                        <!-- <a href="" class="col-sm-2 control-label text-left">View libary</a> -->
                                    </div>
                                </div>
                                <div class="col-xs-12 col-md-12 col-lg-12">
                                    <div class="form-group"><label class="col-sm-2 control-label">Url</label>
                                        <div class="col-sm-4"><input type="text" required name="url" class="form-control" required value="<%=data.url%>"></div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-md-12 col-lg-12">
                                    <div class="form-group"><label class="col-sm-2 control-label">Thứ tự</label>
                                        <div class="col-sm-4"><input type="number" required name="number" class="form-control" required value="<%=data.number%>"></div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Trạng thái</label>
                                    <div class="col-sm-4">
                                        <div><label> <input type="radio" <% if(data.status){ %> checked="checked"
                                                <% } %> value="true" name="status">Hoạt động </label></div>
                                        <div><label> <input type="radio" value="false" name="status" <% if(!data.status){ %> checked="checked"
                                                <% } %>>Không hoạt động</label></div>
                                    </div>
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="form-group">
                                        <div class="col-sm-4 col-sm-offset-10">
                                            <a href="/admin/banner" class="btn btn-default "><i class="fa fa-times"></i>&nbsp;&nbsp;Hủy</a>
                                            <button class="btn btn-primary" type="submit" id="btn-submit"><i class="fa fa-save"></i>&nbsp;&nbsp;Lưu</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../layout/footer.ejs %>