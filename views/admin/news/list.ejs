<% include ../playout/header.ejs %>
    <!-- END TOPBAR -->
    <!-- START CONTAINER -->
    <div class="page-container row-fluid container-fluid">
        <!-- SIDEBAR - START -->

        <% include ../playout/menu.ejs %>


            <!--  SIDEBAR - END -->
            <!-- START CONTENT -->
            <section id="main-content" class=" ">
                <section class="wrapper main-wrapper row" style=''>
                    <div class='col-xs-12'>
                        <div class="page-title">
                            <div class="pull-left">
                                <h1 class="title">Danh Sách Tin Tức</h1>
                            </div>
                            <div class="pull-right hidden-xs">

                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-lg-12">
                        <section class="box ">
                            <header class="panel_header">
                                <h2 class="title pull-left">Tất cả Tin tức</h2>
                                <div class=" pull-right box-btn-add-category">
                                    <a href="/admin/news/add.html" class="btn btn-info btn-add-gox">Thêm tin tức</a>
                                    <!-- <a class="box_toggle fa fa-chevron-down"></a>
                            <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                            <a class="box_close fa fa-times"></a> -->
                                </div>

                            </header>
                            <div class="content-body">
                                <div class="row">
                                    <% if(success_msg != ''){ %>
                                        <div class="alert alert-success">
                                            <%= success_msg%>
                                        </div>
                                        <% } %>
                                            <% if(error_msg != ''){ %>
                                                <div class="alert alert-danger">
                                                    <%= error_msg%>
                                                </div>
                                                <% } %>
                                                    <div class="col-xs-12">
                                                        <!-- ********************************************** -->
                                                        <table id="example" class="display table table-hover table-condensed">
                                                            <thead>
                                                                <tr>
                                                                    <th>STT</th>
                                                                    <th>Tên</th>
                                                                    <th>Tiêu đề</th>
                                                                    <th>Loại tin tức</th>
                                                                    <th>Trạng thái</th>
                                                                    <th style="width:110px">Hành động</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody style="text-align:center">
                                                                <% var id = 0 %>
                                                                    <% data.forEach(function(item){ id ++%>
                                                                        <tr>
                                                                            <td>
                                                                                <%= id%>
                                                                            </td>
                                                                            <td>
                                                                                <%= item.nameNews%>
                                                                            </td>
                                                                            <td>
                                                                                <%= item.titleNews%>
                                                                            </td>
                                                                            <td>
                                                                                <!-- <%console.log('typeNews: '+item.typeNews);%> -->
                                                                                <%if(item.typeNews==1){%>
                                                                                    Giới thiệu
                                                                                    <%}else if(item.typeNews==2){%>
                                                                                        Cách mua hàng
                                                                                        <%}else if(item.typeNews==3){%>
                                                                                            Hướng dẫn thanh toán
                                                                                            <%}else if(item.typeNews==4){%>
                                                                                                Giao hàng
                                                                                                <%}else if(item.typeNews==5){%>
                                                                                                    Bảo hành
                                                                                                    <%}else if(item.typeNews==6){%>
                                                                                                        Bản quyền,thương hiệu
                                                                                                        <%}else if(item.typeNews==7){%>
                                                                                                            Bảo vệ thông tin cá nhân
                                                                                                            <%}else{%>
                                                                                                                Tin tức
                                                                                                                <%}%>
                                                                            </td>
                                                                            <td>
                                                                                <%if(item.status==true){%>
                                                                                    Enable
                                                                                    <%}else{%>
                                                                                        Disable
                                                                                        <%}%>
                                                                            </td>
                                                                            <td style="text-align:center">
                                                                                <a href="/admin/news/del/<%= item._id %>"><img src="/upload/delete-icon.png" alt="delete"></a>
                                                                                <!-- <a href="/admin/category/<%= item._id %>/xoa-cate.html">Xoá</a> | -->
                                                                                <a href="/admin/news/edit/<%= item._id %>"><img src="/upload/edit-icon.png" alt="edit"></a>
                                                                            </td>
                                                                        </tr>
                                                                        <%})%>
                                                            </tbody>
                                                        </table>
                                                        <!-- ********************************************** -->
                                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>
            </section>
            <!-- END CONTENT -->
            <div class="chatapi-windows ">

            </div>

